# ============================================
# CONFIGURATION BILANCOMPETENCE.AI V2
# ============================================

# --------------------------------------------
# Supabase (OBLIGATOIRE)
# --------------------------------------------
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# --------------------------------------------
# Gemini AI (OBLIGATOIRE pour l'IA)
# --------------------------------------------
GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL=gemini-2.5-flash

# --------------------------------------------
# Application (OBLIGATOIRE)
# --------------------------------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_VERSION=2.0.0

# --------------------------------------------
# France Travail API (OBLIGATOIRE pour les offres d'emploi)
# --------------------------------------------
FRANCE_TRAVAIL_CLIENT_ID=your_client_id
FRANCE_TRAVAIL_CLIENT_SECRET=your_client_secret
FRANCE_TRAVAIL_API_URL=https://entreprise.francetravail.fr/connexion/oauth2/access_token?realm=%2Fpartenaire

# --------------------------------------------
# Google Calendar (OPTIONNEL pour les RDV)
# --------------------------------------------
GOOGLE_SERVICE_ACCOUNT_EMAIL=your_service_account_email@project.iam.gserviceaccount.com
GOOGLE_SERVICE_ACCOUNT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
GOOGLE_CALENDAR_ID=primary

# --------------------------------------------
# Stripe (OPTIONNEL pour les paiements)
# --------------------------------------------
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# --------------------------------------------
# Sentry (OPTIONNEL pour le monitoring)
# --------------------------------------------
NEXT_PUBLIC_SENTRY_DSN=https://...@sentry.io/...
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# --------------------------------------------
# Email (OPTIONNEL pour les notifications)
# --------------------------------------------
SENDGRID_API_KEY=SG...
EMAIL_FROM=noreply@bilancompetence.ai

# --------------------------------------------
# Environnement
# --------------------------------------------
NODE_ENV=development

